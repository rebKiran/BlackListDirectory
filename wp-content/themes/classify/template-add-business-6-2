        //e.preventDefault();
        if(x < max_fields){ //max input box allowed
            x++; //text box increment
            $(wrapper).append('<div><div style="width:100%;float:left;"><label class="gfield_label gfield_label_before_complex" for="input_1_30_3" style="font-size: 20px !important;font-weight: bold !important;color: #1e73be !important;border-bottom: 1px solid;width: 96%;margin:10px;padding-bottom: 8px;display:inline-block;">Business Address</label></div><div style="width:100%;float:left;"><input type="text" id="street_add'+y+'" name="street_add[]" value="" style="margin-left:10px;border: 1px solid #e7e7e7 !important;padding-left:10px !important;width:95% !important;"class="form-text required input-textarea" placeholder="Street Address"></div><input  style="margin-left:10px;border: 1px solid #e7e7e7 !important;padding-left:10px !important;width:95% !important;" type="text" id="bussiness_addr'+y+'" name="bussiness_addr[]" value="" class="form-text required input-textarea" placeholder="Address Line 2"><div class="clearfix"></div><div style="width:50%;float:left;"><input type="text" style="margin-left:10px" id="business_city'+y+'" name="business_city[]" value="" class="form-text required input-textarea half" placeholder="City"></div><div style="width:50%;float:left;"><div class="controls"><select id="business_state'+y+'" name="business_state[]" class="form-select" style="border-left: 1px solid #dedede;height: 40px;width: 481px !important;	 background-color:#f8f8f8;"><?php foreach ($states['US'] as $key => $val) { ?><option value="<?php echo $key; ?>"><?php echo $val; ?></option><?php } ?></select></div></div><div class="clearfix"></div><input type="text" style="margin-left:10px" id="business_zipcode'+y+'" name="business_zipcode[]" value="" class="form-text required input-textarea half" placeholder="zipcode"><input type="text" style="margin-left:5px" id="business_country'+y+'" name="business_country[]" value="" class="form-text required input-textarea half" placeholder="Country"><label class="gfield_label gfield_label_before_complex" for="input_1_30_3" style="font-size: