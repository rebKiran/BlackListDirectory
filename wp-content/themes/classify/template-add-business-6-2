			  $('#zipcode').focus();
			  valid = 'false';
                          return false;
	            }
                    if( '' == country) {
                          $('#country_err').html( "<span style='color:red;margin-left:10px;'>Country is required.</span>" );
			  $('#country').focus();
			  valid = 'false';
                          return false;
	            }
                    if( '' == contact ) {
                          $('#contact-err').html( "<span style='color:red;margin-left:10px;'>Contact number is required.</span>" );
